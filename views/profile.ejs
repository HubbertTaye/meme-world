<!doctype html>
<html>
<head>
    <title>Receipts Gallery</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">
  <!-- post reciepts of messy interactions online  -->

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Gallery</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">

            </div>
        </div>
        <!-- img, description, delete and star  -->
        <div class="col-sm-6">
          <h3>Receipts</h3>
          <ul class="messages">
          <% for(var i=0; i<receipts.length; i++) {%>
            <li class="message">
              <span><%= receipts[i].date %></span>
              <img src="uploads/<%= receipts[i].img %>" alt="screenshot of interaction">
              <span><%= receipts[i].desc %></span>
              <span><i class="far fa-star"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>
<!-- make sure whats displayed is from the same user -->
          <h2>Add a receipts</h2>
        <% if (user.local.email) { %>
          <form action="/receipts" enctype="multipart/form-data" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="mm-dd-yyyy" name="date">
            <input type="file" name="image">
            <input type="text" placeholder="description" name="desc">
            <button type="submit" value="Upload">Post</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
